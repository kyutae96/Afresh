<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.markcloudproject">


    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_main"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_main_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MarkCloudProject"
        android:usesCleartextTraffic='true'
        android:requestLegacyExternalStorage="true">

        <activity android:name=".Running">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Fragment.FragmentMainActivity"/>
        <activity android:name=".MainActivity"/>
        <activity android:name=".CameraGuide"/>
        <activity android:name=".ResultActivity"/>
        <activity android:name=".ServerActivity"/>
        <activity android:name=".LoginActivity"/>
        <activity android:name=".AfterLoginActivity"/>
        <activity android:name=".UserActivity"/>
        <activity android:name=".Main2Activity"/>
        <activity android:name=".CameraGuide2"/>
        <uses-library android:name="org.apache.http.legacy" android:required="false"/>


        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="@string/kakao_app_key"/>

    </application>

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.hardware.camera2"/>
    <uses-permission android:name="android.hardware.camera.autofocus"/>
    <uses-permission android:name="android.permission.location.gps"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

</manifest>